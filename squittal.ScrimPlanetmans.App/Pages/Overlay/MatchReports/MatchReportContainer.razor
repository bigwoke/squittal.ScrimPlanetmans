@using squittal.ScrimPlanetmans.ScrimMatch.Models;

@if (UseInfantryMatchReport())
{
    <InfantryMatchReport ShowHsr=ShowHsr StatsType=StatsType CompactLayout=CompactLayout ShowPlayerScores=ShowPlayerScores />
}

@code {
    [Parameter]
    public bool ShowHsr { get; set; } = MatchOverlay.DefaultShowHsr;

    [Parameter]
    public bool? ShowPlayerScores { get; set; }

    [Parameter]
    public bool CompactLayout { get; set; }

    [Parameter]
    public OverlayStatsDisplayType StatsType { get; set; }

    private bool UseInfantryMatchReport()
    {
        switch (StatsType)
        {
            case OverlayStatsDisplayType.InfantryScores:
                return true;

            case OverlayStatsDisplayType.InfantryObjective:
                return true;

            default:
                return false;
        }
    }
}