@using squittal.ScrimPlanetmans.ScrimMatch.Models;

@if (Player != null)
{
    if (TeamOrdinal == 1)
    {
        <TeamPlayerStatusRowLoadout Player=Player />
        <TeamPlayerStatusRowDetails Player=Player NoScore=NoScore CurrentRoundOnly=CurrentRoundOnly />
    }
    else if (TeamOrdinal == 2)
    {
        <TeamPlayerStatusRowDetails Player=Player NoScore=NoScore CurrentRoundOnly=CurrentRoundOnly />
        <TeamPlayerStatusRowLoadout Player=Player />
    }
}

@code {
    [Parameter]
    public Player Player { get; set; }

    [Parameter]
    public int TeamOrdinal { get; set; }

    [Parameter]
    public bool NoScore { get; set; }

    [Parameter]
    public bool CurrentRoundOnly { get; set; } = MatchOverlay.DefaultShowCurrentRoundOnly;
}
